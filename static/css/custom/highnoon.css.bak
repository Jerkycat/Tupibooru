/* Root */

:root {
    --ui-bg: #e5e7eb;
    --ui-ht: #2c2e31;
    --ui-tc: #1a202c;

    --ui-c1: #fff;
    --ui-c2: #d2e3f0;
    --ui-c3: #dcdcdc;
    --ui-c4: #f5f5f5;

    --ui-ac: #5682d5;
    --ui-cc: #966fd6;

    --ui-u1: #e4443b;
    --ui-u2: #f5bf60;

    --he-img: url(../../imgs/banners/Noon.png);
    --lo-img: url(../../imgs/decoration/logos/hn-logo.png);

    --ad-ts: url(../../imgs/ads/ad-test.png);
    --ad-mg: url(../../imgs/ads/ad-cri.png);
}

@font-face {
    font-family: mainfont;
    src: url(../fonts/mf.ttf);
}

@font-face {
    font-family: textfont;
    src: url(../fonts/tf.ttf);
}

.login-dropdown form div:focus-within input {
    color: var(--ui-ht);
}

.login-dropdown form div:focus-within .material-symbols-outlined {
    color: currentColor;
}

/* Register */

.register-page {
    margin-top: 1rem;
}

.register-page div a {
    font-size: 0.85rem;

    color: var(--ui-ac);
}

.register-page div a:hover {
    text-decoration: underline;

    filter: brightness(115%);
}

.register-page form {
    display: flex;
    flex-direction: column;
    width: 100%;

    gap: 1rem;
}

.register-page form div {
    display: flex;
    align-items: center;

    background-color: var(--ui-c4);
    color: var(--ui-tc);

    box-sizing: border-box;
    border-radius: 0.75rem;
    padding: 0.35rem;

    transition: all 0.3s ease;
}

.register-page form input {
    flex: 1;

    background-color: transparent;
    color: var(--ui-tc);

    border: none;
    outline: none;

    margin: auto;

    font-size: 1rem;
    font-family: textfont;
    margin-left: 0.5rem;

    transition: all 0.3s ease;
}

.register-page form button {
    display: flex;
    margin: auto;

    font-size: 1rem;
    font-family: textfont;

    gap: 0.65rem;
    padding: 0.5rem;

    border: none;
    border-radius: 0.65rem;

    background-color: var(--ui-ac);

    transition: all 0.3s ease;
}

.register-page form button:hover {
    cursor: pointer;

    filter: brightness(75%);
}

.register-page form button .material-symbols-outlined {
    color: currentColor;
}

.register-page .material-symbols-outlined {
    color: var(--ui-tc);
    font-size: 1.5rem !important;

    transition: all 0.3s ease;
}

.register-page form div:focus-within {
    outline: 0.2rem solid var(--ui-ac);
}

.register-page form div:focus-within input {
    color: var(--ui-ht);
}

.register-page form div:focus-within .material-symbols-outlined {
    color: var(--ui-ht);
}

.captcha {
    display: flex;
    flex-direction: column;

    background-color: transparent !important;

    gap: 1rem;
}

.captcha img {
    width: 100%;

    border-radius: 1rem;

    object-fit: contain;
}

.popup-context.captcha {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: var(--ui-c4) !important;
    color: var(--ui-tc);
    box-sizing: border-box;
    border-radius: 0.75rem;
    padding: 0.35rem;
    transition: all 0.3s ease;

    gap: 0;
}

.popup-context.captcha input {
    flex: 1;
    background-color: transparent;
    color: var(--ui-tc);
    border: none;
    outline: none;
    margin: auto;
    margin-left: auto;
    font-size: 1rem;
    font-family: textfont;
    margin-left: 0.5rem;
    transition: all 0.3s ease;
}

.popup-context.captcha:focus-within {
    outline: 0.2rem solid var(--ui-ac);
}

.popup-context.captcha:focus-within input {
    color: var(--ui-ht);
}

.popup-context.captcha:focus-within .material-symbols-outlined {
    color: var(--ui-ht);
}

.extras {
    width: fit-content;
    align-self: center;
}

.extras a {
    text-decoration: none;
}

/* Content */

.index-main {
    display: flex;
    flex-direction: column;

    font-family: textfont;
    font-size: 0.875rem;

    margin: 0 2rem;
    gap: 2rem;
}

.board-main {
    display: flex;
    flex-direction: row;

    font-size: 0.875rem;

    margin: 0 2rem;
    gap: 2rem;
}

.thread-main {
    display: flex;
    flex-direction: column;

    font-size: 0.875rem;

    margin: 0 2rem;

    gap: 1.5rem;
}

.other-main {
    display: flex;
    flex-direction: column;

    height: 100vh;
}

/* Other */

.other-main>div {
    display: flex;
    flex-direction: column;
    align-items: center;

    margin: auto;

    font-family: mainfont;
}

.other-content {
    display: flex;
    flex-direction: column;

    padding: 2rem;
    border-radius: 1rem;

    background-color: var(--ui-c1);

    gap: 1rem;
}

.other-content>div {
    display: flex;
}

.other-title {
    font-weight: bold;
    font-size: 1.5rem;

    color: var(--ui-ht)
}

.other-text {
    font-size: 1rem;

    color: var(--ui-tc);
}

.other-main .return {
    display: flex;
    align-items: center;
    text-align: center;

    font-family: mainfont;
    font-size: 1rem;

    color: var(--ui-ac);

    background-color: transparent;

    padding: 0.375rem;
    margin-top: 1rem;

    border: none;
    border-radius: 0.65rem;

    transition: all 0.3s ease;
}

.other-main .return:hover {
    cursor: pointer;

    text-decoration: underline;
}

/* Index */

.index-post {
    display: flex;
    align-self: center;
    flex-direction: column;

    width: 65%;

    background-color: var(--ui-c2);

    border: 0.063rem solid #ffffff14;
    border-radius: 1rem;

    overflow: hidden;
}

.index-post>div {
    padding: 0.75rem;
}

.index-title {
    display: flex;
    align-items: center;

    height: 3rem;

    font-weight: bold;
    font-size: 1.25rem;

    gap: 0.25rem;

    background-color: var(--ui-c1);

    outline: 0.063rem solid var(--ui-ht);
}

.ko-fi {
    display: flex;
    margin-left: auto;

    text-decoration: none;
}

.ko-fi button {
    display: flex;
    align-items: center;
    text-align: center;

    font-family: mainfont;

    color: var(--ui-ht);

    background-color: transparent;

    padding: 0.375rem;
    margin: 0.25rem 0;

    gap: 0.5rem;

    border: none;
    border-radius: 0.65rem;

    transition: all 0.3s ease;
}

.ko-fi button:hover {
    cursor: pointer;

    background-color: var(--ui-c3);
}

.ko-fi img {
    height: 1rem;
}

.index-content {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    gap: 1rem;
}

.index-content:has(.trending) {
    justify-content: center;
    align-items: start;

    gap: 1rem;
}

.index-content p {
    font-weight: bold;

    width: 100%;

    color: var(--ui-ht);
}

.trending {
    display: flex;
    flex-direction: column;

    width: calc((100% - 2 * 2rem) / 3);

    gap: 1rem;
}

.trending div {
    display: flex;
    align-items: center;
}

div:has(.trending-board) {
    display: flex;
    justify-content: center;

    align-self: center;
}

.trending-board {
    font-family: mainfont;
    text-decoration: none;

    color: var(--ui-ht) !important;

    white-space: nowrap;
}

.trending-content {
    display: flex;
    flex-direction: column;

    width: 100%;
    height: 15.625rem;

    text-align: center;

    padding: 0.5rem;

    gap: 1rem;

    border-radius: 1rem;

    transition: all 0.3s ease;
}

.trending-content div:has(img) {
    display: flex;
    justify-content: center;
}

.trending-content pre {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 6;

    width: 100%;
    font-family: textfont;

    overflow: hidden;
}

.trending-content:hover {
    cursor: pointer;
    background-color: var(--ui-c3);
}

.trending-content img {
    max-width: 6.25rem;
    max-height: 6.25rem;

    border-radius: 1rem;
}

/* Propaganda */

.board-ad.test-ad {
    background-image: var(--ad-ts);
}

.board-ad.manga-ad a {
    background-color: #5a0b0b;
    background-image: var(--ad-mg);

    height: 7.813rem;

    background-repeat: no-repeat;
    background-position: center;

    box-sizing: border-box;
}

.board-ad {
    display: flex !important;
    justify-content: flex-end !important;
    align-items: flex-end !important;

    outline: 0.063rem solid var(--ui-ht);
    border-radius: 1rem;

    width: 100%;
    box-sizing: border-box;

    overflow: hidden;

    cursor: pointer;
}

.board-ad a {
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;

    width: 100%;
    height: 100%;

    text-decoration: none !important;
    color: var(--ui-bg);
}

.text-ad {
    display: flex;
    flex-direction: row-reverse;

    width: fit-content;

    border-top-left-radius: 1rem;

    padding-top: 0.25rem;
    padding-bottom: 0.25rem;

    padding-left: 0.5rem;
    padding-right: 0.5rem;

    background-color: rgba(0, 0, 0, 0.5);

    outline: 0.063rem solid var(--ui-ht);

    -webkit-user-select: none;
}

.text-ad p {
    display: flex;
    width: fit-content;
    height: fit-content;

    font-family: textfont;
    font-weight: bold;

    font-size: 0.875rem;
}

/* Post */

.page-content {
    display: flex;
    flex-direction: column;

    flex-grow: 1;

    gap: 1.5rem;
}

article {
    display: flex;
    flex-direction: column;

    width: fit-content;

    font-family: textfont;

    background-color: var(--ui-c2);

    border: 0.063rem solid var(--ui-ht);
    border-radius: 1rem;

    overflow: hidden;
}

article section {
    display: flex;
}

.post-bar {
    display: flex;

    font-weight: bold;

    background-color: var(--ui-c1);

    outline: 0.063rem solid var(--ui-ht);
}

.post-bar>section {
    padding: 0.25rem 0;
}

.post-bar>section a {
    display: flex;
    align-items: center;

    color: var(--ui-ht);
}

.post-bar a {
    text-decoration: none;

    color: var(--ui-ht);
}

.post-bar .material-symbols-outlined {
    font-size: 1.25rem;
}

.post-bar button {
    margin: 0.25rem 0;
}

.post-profile {
    width: 14rem;
}

.post-profile a {
    display: flex;
    align-items: center;

    padding: 0.25rem;
    margin-left: 0.75rem;

    gap: 0.25rem;
}

.post-profile div {
    background-image: url(../../imgs/decoration/anon.png);
    background-size: cover;
    background-position: center;

    width: 2rem;
    height: 2rem;

    border-radius: 0.25rem;
}

.post-title {
    margin-left: 0.5rem;
    margin-right: 1rem;
}

.post-buttons {
    align-items: center;

    margin-left: auto;
    margin-right: 1rem;

    gap: 0.5rem;
}

.post-buttons button {
    font-family: mainfont;

    gap: 0.25rem;
}

.post-buttons button a {
    font-family: mainfont;

    gap: 0.25rem;
}

.mobile-button {
    position: relative;
}

.mobile-options {
    top: 110%;
    right: 0;
}

.mobile-options button {
    font-size: 1rem;
}

.mobile-button:has(.dropdown):focus-within .dropdown {
    display: flex;
}

.mobile-bar {
    height: 3rem;
}

.block {
    color: var(--ui-u2) !important;
}

.block .material-symbols-outlined {
    color: currentColor;
}

.report {
    color: var(--ui-u1) !important;
}

.report .material-symbols-outlined {
    color: currentColor;
}

.post-content:has(.post-media) {
    flex-direction: column;
}

.post-content:has(.post-media > .media-wrapper:first-child + .media-wrapper) .post-text {
    padding-top: 1rem;
    padding-left: 2rem;
}

.post-content:has(.post-media > .media-wrapper:only-child) {
    flex-direction: row;
    align-items: flex-start;
}

.post-content:not(:has(.post-media)) .post-text {
    padding-top: 1rem;
    padding-left: 2rem;
}

.post-media {
    flex-grow: 0;
    flex-shrink: 0;
}

.media-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;

    max-width: 12.5rem;
    max-height: 12.5rem;

    margin: 0.75rem;
    border-radius: 0.75rem;

    overflow: hidden;
}

.media-wrapper>* {
    border-radius: 0.75rem;
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    cursor: pointer;
}

.post-text {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    padding-left: 0.5rem;
    padding-right: 1rem;

    color: var(--ui-ht);
}

.post-text pre {
    font-family: textfont;
}

.post-engage {
    justify-content: space-evenly;

    width: 14rem;
}

.post-engage button {
    font-family: mainfont;

    gap: 0.25rem;
}

.material-symbols-outlined {
    transition: transform 0.3s ease;
}

.bump {
    color: var(--ui-ht);
}

.bump .material-symbols-outlined {
    color: currentColor;
}

button.button-active.bump {
    color: white !important;
    background-color: var(--ui-ac) !important;
}

.sage {
    color: var(--ui-ht);
}

.sage .material-symbols-outlined {
    color: currentColor;
}

button.button-active.sage {
    color: white !important;
    background-color: var(--ui-cc) !important;
}

.post-date {
    margin-left: 0.5rem;
    margin-right: 1rem;
}

.board-main .post-date a:hover {
    text-decoration: underline;
}

/* Animação de Post */

.rotated {
    transform: rotate(180deg);
    transition: transform 0.3s ease;
}

/* Post Reply */

.reply-bar {
    height: 3rem;

    padding: 0.25rem 0;
    padding-left: 0.75rem;
}

.reply-bar>* {
    display: flex;
    align-items: center;

    font-weight: bold;
    text-decoration: none;

    color: var(--ui-ht);
}

.reply-bar button {
    margin: 0.25rem 0;
}

.reply-bar button:hover {
    background-color: var(--ui-c4);
}

.reply-bar .reply-profile div {
    background-image: url(../../imgs/decoration/anon.png);
    background-size: cover;
    background-position: center;

    width: 2rem;
    height: 2rem;

    border-radius: 0.25rem;

    outline: 0.063rem solid var(--ui-ht);
}

.reply-bar a {
    display: flex;
    align-items: center;

    text-decoration: none;

    color: var(--ui-ht);

    padding: 0.25rem;

    border-radius: 0.5rem;

    gap: 0.25rem;

    transition: all 2s ease;
}

.reply-bar .post-date {
    margin: 0;
}

.reply-bar .reply-profile:hover {
    background-color: var(--ui-c4);
}

.reply-bar .post-buttons {
    padding-left: 1rem;
}

.reply-bar .mobile-button {
    gap: 0.5rem;
}

.reply-bar .material-symbols-outlined {
    font-size: 1.25rem;
}

.reply-bar>section:not(.mobile-button) * {
    display: flex;
    align-items: center;
    color: var(--ui-ht);
}

/* Sidebar */

.desktop-menu {
    flex-shrink: 0;

    width: 18.75rem;
    height: fit-content;

    font-family: textfont;

    background-color: var(--ui-c1);

    border: 0.063rem solid #ffffff14;
    border-radius: 1rem;
    margin-left: auto;

    overflow: hidden;

    outline: 0.063rem solid var(--ui-ht);
}

.desktop-menu section {
    display: flex;
    flex-direction: column;
}

.side-content {
    transition: max-height 0.4s ease-in-out, padding 0.4s ease-in-out;
    overflow: hidden;
    max-height: 62.5rem;
    padding: 1rem;
}

.desktop-menu section ul {
    display: flex;
    flex-direction: column;

    gap: 1rem;
}

.desktop-menu section ul li {
    padding-left: 1rem;
    text-indent: -1rem;
}

.desktop-menu button {
    color: var(--ui-ht);
}

.side-button {
    display: flex;
    align-items: center;
    justify-content: center;

    padding: 0.5rem 1rem;
}

.side-button>* {
    font-size: 1.25rem;

    gap: 0.25rem;
}

.desktop-menu section .side-title {
    display: flex;
    align-items: center;

    outline: 0.063rem solid var(--ui-ht);

    padding: 0.5rem 1rem;
}

.side-title button {
    margin-left: auto;
}

.desktop-menu section .side-title p {
    color: var(--ui-ht);

    font-weight: bold;
    font-size: 1rem;
}

.desktop-menu section div button .material-symbols-outlined {
    font-size: 1.25rem;
}

/* Animações da Sidebar */

.side-title button.minimize .material-symbols-outlined {
    display: inline-block;
    transition: transform 0.3s ease;
}

.side-title button.minimize.collapsed .material-symbols-outlined {
    transform: rotate(180deg);
}

.side-content.collapsed {
    max-height: 0;
    padding-top: 0;
    padding-bottom: 0;
}

/* Thread */

.thread-main .post-date {
    cursor: default;
}

/* Paginator */

.pagination-container {
    display: flex;

    margin-top: auto;
}

.pagination {
    display: flex;

    gap: 0.25rem;
}

.pagination * {
    display: flex;
    justify-content: center;
    align-items: center;

    min-width: 2.75rem;
    height: 2.75rem;

    font-family: mainfont;

    text-decoration: none;

    border-radius: 20rem;
}

.pagination span {
    -webkit-user-select: none;
}

a.button-active {
    background-color: var(--ui-c3);
}

/* Footer */

footer {
    display: flex;

    font-family: textfont;
    font-size: 0.875rem;

    background-image: linear-gradient(270deg,rgba(52,144,198,.175),rgba(30,150,220,.12));

    padding: 3rem;

    outline: 0.063rem solid var(--ui-ht);

    gap: 2rem;
}

footer * {
    display: flex;
}

footer>section {
    flex-direction: column;
    gap: 1rem;
}

footer >section > div {
    display: flex;
    flex-direction: column;
}

.footer-logo {
    user-select: none;
    z-index: 1;
    transition: all 0.3s ease;

    content: var(--lo-img);
}

.footer-socials a {
    max-width: 11.25rem;
    height: fit-content;
}

.footer-socials a img {
    width: 100%;
}

.footer-copyright {
    flex-direction: column;

    margin-top: auto;
}

.footer-title {
    font-weight: bold;
    color: var(--ui-ht);

    margin-bottom: 0.25rem;
}

.footer-extras {
    align-items: center;

    gap: 0.5rem;
}

footer a {
    text-decoration: none;
}

footer a:hover {
    text-decoration: underline;
}

/* Popups */

dialog {
    position: fixed;

    top: 0;
    left: 0;
    right: 0;
    bottom: 0;

    font-family: textfont;
    color: var(--ui-ht);

    background-color: var(--ui-c1);

    padding: 0.75rem;
    margin: auto;

    border: none;
    border-radius: 0.5rem;

    outline: 0.063rem solid var(--ui-ht);
}

dialog::backdrop {
    background-color: rgba(0, 0, 0, 0.8);
}

dialog form {
    display: flex;
    flex-direction: column;

    gap: 1rem;
}

dialog>div {
    display: flex;
    flex-direction: column;

    gap: 1rem;
}

.popup-title {
    cursor: default;
    -webkit-user-select: none;

    font-weight: bold;
    font-size: 1.25rem;
}

.popup-context {
    display: flex;
    flex-direction: column;

    gap: 1rem;

    cursor: default;
    -webkit-user-select: none;
}

.popup-buttons {
    display: flex;

    font-family: textfont;

    gap: 1rem;
}

.popup-buttons button {
    font-weight: bold;
}

.cancel {
    margin-left: auto;
}

.cancel,
.pin,
.lock,
.submit,
.warn,
.ban,
.create {
    background-color: transparent;
}

.cancel,
.pin,
.lock {
    color: var(--ui-ht);
}

.submit,
.ban {
    color: var(--ui-u1);
}

.warn {
    color: var(--ui-u2);
}

.create,
.dismiss {
    color: var(--ui-ac);
}

.pin:hover,
.lock:hover,
.submit:hover,
.warn:hover,
.ban:hover,
.pin:hover,
.lock:hover,
.create:hover {
    background-color: var(--ui-c3);
}

dialog textarea {
    width: 20rem;
    resize: none;

    background-color: transparent;
    color: var(--ui-tc);

    border: none;
    outline: none;

    margin: auto;

    font-size: 1rem;
    font-family: textfont;
    margin-left: 0.5rem;

    transition: all 0.3s ease;
}

dialog .popup-context:has(textarea) {
    display: flex;
    align-items: center;

    background-color: var(--ui-c4);
    color: var(--ui-tc);

    box-sizing: border-box;
    border-radius: 0.5rem;
    padding: 0.35rem;

    transition: all 0.3s ease;
}

dialog .popup-context:has(textarea):focus-within {
    outline: 0.2rem solid var(--ui-ac);
}

dialog .popup-context:focus-within textarea {
    color: white;
}

dialog .popup-context:focus-within .material-symbols-outlined {
    color: currentColor;
}

dialog .popup-context:has(button) {
    color: var(--ui-ht);
}

.popup-context:has(button)>button {
    color: var(--ui-ht);
    background-color: var(--ui-c4);

    border: none;
