    overflow: hidden;
}

.profile-picture img {
    width: inherit;
    height: inherit;
}

.profile-picture.editable {
    position: relative;
}

.profile-picture.editable button {
    cursor: pointer;

    position: relative;

    width: 100%;
    height: 100%;

    border: none;
    overflow: hidden;

    backface-visibility: hidden;
    transform: translateZ(0);
}

.profile-picture.editable button::before {
    content: '';
    position: absolute;

    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;

    z-index: 1;

    backface-visibility: hidden;
    transform: translateZ(0);
}

.profile-picture.editable button::after {
    /* Texto no centro-inferior */
    content: "Editar";
    position: absolute;
    left: 50%;
    bottom: 15px;
    transform: translateX(-50%);
    color: white;
    font-weight: bold;
    opacity: 0;
    transition: opacity 0.3s ease;
    z-index: 2;
    /* Fica acima do gradiente */
}

.profile-picture.editable button:hover::before,
.profile-picture.editable button:hover::after {
    opacity: 1;
}

